@model SchoolGradeManager.Models.AddQuestionsToTest

@{
    ViewData["Title"] = "AddQuestions";
}

<style>
    .table-white-text {
        color: white !important;
    }

    .table-striped>tbody>tr:nth-of-type(odd){
        color: white !important;
    }
</style>

<h1 class="h1">Dodaj pytania do testu: @Model.testForQuestions.TestName</h1>

<form method="post" asp-action="AddQuestions">
    <input type="hidden" asp-for="testForQuestions.id" />

    <div class="table-responsive">
        <table class="table table-striped table-white-text">
            <thead class="thead-dark">
                <tr>
                    <th>Wybierz pytanie</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pytanie in Model.questionsInTest)
                {
                    <tr>
                        <td>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="Questions" value="@pytanie.id" />
                                <label class="form-check-label">@pytanie.operation</label>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-success" />
    </div>
</form>


