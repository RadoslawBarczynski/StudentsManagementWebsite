@model SchoolGradeManager.Models.Test
@using static SchoolGradeManager.Models.StudentManagerContext;

@{
    ViewData["Title"] = "Edit";
}

<h1 class="h1">Edytuj</h1>

<h4 class="h4">Test</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TestName" class="control-label">Nazwa testu</label>
                <input asp-for="TestName" class="form-control" />
                <span asp-validation-for="TestName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="isActive" class="form-check-label">Aktywny</label>
                <input asp-for="isActive" class="form-check-input" type="checkbox" name="isActive" checked="@Model.isActive" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
