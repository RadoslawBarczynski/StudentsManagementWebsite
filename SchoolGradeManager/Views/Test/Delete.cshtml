@model SchoolGradeManager.Models.Test

@{
    ViewData["Title"] = "Delete";
}

<h1 class="h1">Usuń</h1>

<h3 class="h3">Czy jesteś pewny, że chcesz usunąć ten test?</h3>
<div>
    <h4 class="h4">Test</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa testu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TestName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Powrót do listy</a>
    </form>
</div>
