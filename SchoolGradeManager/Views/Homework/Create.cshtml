@model SchoolGradeManager.Models.Homework

@{
    ViewData["Title"] = "Create";
}

<h1 class="h2" style="text-align: center">Utwórz nowe zadanie</h1>

<h4 class="h4" style="text-align: center">Zadanie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ScoreToGet" class="control-label">Punkty do zdobycia</label>
                <input asp-for="ScoreToGet" class="form-control" />
                <span asp-validation-for="ScoreToGet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameNumber" class="control-label">Wybierz grę</label>
                <select asp-for="GameNumber" name="GameNumber" class="form-select" aria-label="Default select example">
                    <option value=1>Rozbicie cyfr</option>
                    <option value=2>Wyrównaj równanie</option>
                    <option value=3>2048</option>
                    <option value=4>Połącz je!</option>
                </select>
                <span asp-validation-for="GameNumber" class="text-danger"></span>
            </div>
            <br />
             <div class="form-group">
                <label asp-for="isActive" class="form-check-label">Aktywny</label>
                <input asp-for="isActive" class="form-check-input" type="checkbox" name="isActive" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-action="Index">Powrot do listy</a>
</div>

