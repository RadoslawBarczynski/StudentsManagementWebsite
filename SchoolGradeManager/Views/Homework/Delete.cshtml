@model SchoolGradeManager.Models.Homework

@{
    ViewData["Title"] = "Delete";
}

<h1 class="h1">Usuń</h1>

<h3 class="h3">Czy na pewno chcesz usunąć to zadanie?</h3>
<div>
    <h4 class="h4">Zadanie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ScoreToGet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScoreToGet)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GameNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameNumber)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Powrót do listy</a>
    </form>
</div>
