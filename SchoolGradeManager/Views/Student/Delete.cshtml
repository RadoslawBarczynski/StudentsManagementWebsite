@model SchoolGradeManager.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h1 class="h1">Usuń</h1>

<h3 class="h3">Czy na pewno chcesz usunąc tego ucznia?</h3>
<div>
    <h4 class="h4">Student</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Imię studenta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentFirstName)
        </dd>
        <dt class = "col-sm-2">
            Nazwisko studenta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentLastName)
        </dd>
        <dt class = "col-sm-2">
            Login studenta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentLogin)
        </dd>
        <dt class="col-sm-2">
            Hasło Studenta
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentPassword)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Powrót do listy</a>
    </form>
</div>
