@model SchoolGradeManager.Models.Question

@{
    ViewData["Title"] = "Details";
}

<h1 class="h1">Szczegóły</h1>

<div>
    <h4 class="h4">Pytania</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Działanie
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.operation)
        </dd>
        <dt class = "col-sm-2">
            Poprawna odpowiedź
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.answer1)
        </dd>
        <dt class = "col-sm-2">
            Błędna odpowiedź 1
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.answer2)
        </dd>
        <dt class = "col-sm-2">
            Błędna odpowiedź 2
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.answer3)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edytuj", "Edit", new {  id = Model.id  }, new {@class ="btn btn-success"}) |
    <a class="btn btn-info"  asp-action="Index">Powrót do listy</a>
</div>
