@model SchoolGradeManager.Models.Question

@{
    ViewData["Title"] = "Delete";
}

<h1 class="h1">Usuń</h1>

<h3 class="h3">Jesteś pewny, że chcesz usunąć odpowiedź?</h3>
<div>
    <h4>Pytanie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Operacja
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.operation)
        </dd>
        <dt class = "col-sm-2">
            Poprawna odpowiedź
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.answer1)
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a class="btn btn-info"  asp-action="Index">Powrót do listy</a>
    </form>
</div>
