@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Learn Genius</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="~/css/loginStyle.css" />

</head>
<body>
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
    <form method="post" asp-controller="login" asp-action="login">
        <h3>Zaloguj</h3>

        <label class="form-label" for="usernameInput">Nazwa użytkownika</label>
        <input type="text" id="usernameInput" class="form-control form-control-lg"
               placeholder="Nazwa użytkonika..." name="username" />


        <label class="form-label" for="passwordInput">Hasło</label>
        <input type="password" id="passwordInput" class="form-control form-control-lg"
               placeholder="Hasło..." name="password" />

        <button type="submit">Zaloguj</button>
        <div class="social">
            <span>Użyj hasła podanego przez twórcę</span>
        </div>
    </form>
</body>
</html>













